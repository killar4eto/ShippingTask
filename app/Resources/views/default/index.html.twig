{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
		<h2 class="page-header">Latest shippings</h2>
		
		<table class="table table-striped">
			<thead>
				<tr>
					<th>#</th>
					<th>Firstname:</th>
					<th>Lastname:</th>
					<th>Modified:</th>
					<th></td>
				</tr>
			</thead>
			<tbody>
				{% for results in getData %}
				<tr>
					<th scope="row">{{ results.id }}</th>
					<td>{{ results.firstname }}</td>
					<td>{{ results.lastname }}</td>
					<td>{{ results.modified|date('j/m/Y, g:i a') }}</td>
					<td>
						<a href="./view/{{ results.id }}" class="btn btn-success">View</a>
						<a href="./edit/{{ results.id }}" class="btn btn-default">Edit</a>
						<a href="./remove/{{ results.id }}" class="btn btn-danger">Remove</a>
					</td>
				</tr>
				{% endfor %}
			</tbody>
		</table>
    </div><!-- /container -->
{% endblock %}
